{
	"name": "execify-cli",
	"version": "0.2.0-0",
	"description": "Easily make a Node.js CLI executable.",
	"keywords": [
		"cli",
		"cli-app",
		"command-line",
		"executable",
		"chmod",
		"chmod+x",
		"shebang",
		"hashbang",
		"typescript",
		"binary",
		"bin",
		"executable"
	],
	"license": "MIT",
	"repository": "tommy-mitchell/execify-cli",
	"author": {
		"name": "Tommy Mitchell",
		"url": "https://tommymitchell.io"
	},
	"type": "module",
	"engines": {
		"node": ">=16.17"
	},
	"bin": {
		"execify": "dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"prepare": "npm run build",
		"build": "tsc -p tsconfig.build.json && node dist/cli.js --pkg --fix-shebang",
		"lint": "xo",
		"test": "tsc --noEmit && c8 ava"
	},
	"ava": {
		"files": [
			"test/**/*.ts",
			"!test/_test-helpers",
			"!test/fixtures"
		],
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm",
			"--loader=esmock",
			"--no-warnings=ExperimentalWarning"
		]
	},
	"dependencies": {
		"exit-hook": "^3.2.0",
		"globby": "^13.2.2",
		"meow": "^12.0.1",
		"read-pkg-up": "^10.0.0",
		"ts-pattern": "^5.0.5",
		"tsconfig-replace-paths": "^0.0.14"
	},
	"devDependencies": {
		"@tommy-mitchell/tsconfig": "^1.1.0",
		"@types/node": "^16.17",
		"ava": "^5.3.1",
		"c8": "^8.0.1",
		"cp-file": "^10.0.0",
		"cross-env": "^7.0.3",
		"dot-prop": "^8.0.2",
		"esmock": "^2.3.6",
		"execa": "^7.2.0",
		"get-bin-path": "^10.0.0",
		"is-executable": "^2.0.1",
		"make-executable": "^2.0.2",
		"map-obj": "^5.0.2",
		"p-map": "^6.0.0",
		"proper-tags": "^2.0.1",
		"tempy": "^3.1.0",
		"testtriple": "^2.2.3",
		"ts-node": "^10.9.1",
		"type-fest": "^4.2.0",
		"typescript": "~5.1.6",
		"xo": "^0.54.2"
	}
}
